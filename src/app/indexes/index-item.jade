tr
  td
    div.name= model.name
    div.definition
      each field in model.fields.serialize()
        - var cls = ''
        - if (['2d', '2dsphere', 'geoHaystack'].indexOf(field.value) > -1) cls = 'geo'
        - if (field.value === 'text') cls = 'text'
        - if (field.value === 'hashed') cls = 'hashed'
        div.pair
          div.field= field.field
          div(class='value #{cls}')
            if (field.value === 1)
              i.fa.fa-arrow-up
            else if (field.value === -1)
              i.fa.fa-arrow-down
            else
              = field.value
              i.link
  td
    div.quantity(data-hook='index-size')
    div.unit(data-hook='index-size-unit')
  td
    div.quantity(data-hook='usage-count')
    div.usage-since since&nbsp;
      span(data-hook='usage-since')
  td
    div.properties
      each prop in model.properties
        - var cls = ''
        - if (['single', 'compound'].indexOf(prop) > -1) cls = 'simple'
        div(class='property #{cls}')
          = prop
          i.link
