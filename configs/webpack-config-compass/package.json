{
  "name": "@mongodb-js/webpack-config-compass",
  "description": "Shared webpack configuration for Compass application and plugins",
  "author": {
    "name": "MongoDB Inc",
    "email": "compass@mongodb.com"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://jira.mongodb.org/projects/COMPASS/issues",
    "email": "compass@mongodb.com"
  },
  "homepage": "https://github.com/mongodb-js/compass",
  "version": "1.0.7",
  "repository": {
    "type": "git",
    "url": "https://github.com/mongodb-js/compass.git"
  },
  "files": [
    "dist"
  ],
  "license": "SSPL",
  "main": "dist/index.js",
  "exports": {
    "import": "./dist/.esm-wrapper.mjs",
    "require": "./dist/index.js"
  },
  "bin": {
    "webpack-compass": "./bin/webpack.js"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "bootstrap": "npm run compile",
    "prepublishOnly": "npm run compile && compass-scripts check-exports-exist",
    "compile": "tsc -p tsconfig.json",
    "postcompile": "gen-esm-wrapper . ./dist/.esm-wrapper.mjs",
    "eslint": "eslint",
    "prettier": "prettier",
    "lint": "npm run eslint . && npm run prettier -- --check .",
    "depcheck": "depcheck",
    "check": "npm run lint && npm run depcheck",
    "check-ci": "npm run check",
    "reformat": "npm run prettier -- --write . && npm run eslint . --fix"
  },
  "devDependencies": {
    "@mongodb-js/eslint-config-compass": "^1.0.4",
    "@mongodb-js/prettier-config-compass": "^1.0.0",
    "@mongodb-js/tsconfig-compass": "^1.0.1",
    "@types/cli-progress": "^3.9.2",
    "@types/html-webpack-plugin": "^3.2.6",
    "@types/mini-css-extract-plugin": "^2.3.0",
    "@types/webpack-bundle-analyzer": "^4.4.1",
    "depcheck": "^1.4.1",
    "eslint": "^7.25.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@babel/core": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.18.6",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/runtime": "^7.18.6",
    "@cerner/duplicate-package-checker-webpack-plugin": "^2.1.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.5",
    "babel-loader": "^8.2.5",
    "babel-plugin-istanbul": "^5.2.0",
    "browserslist": "^4.21.4",
    "chalk": "^4.1.2",
    "cli-progress": "^3.9.1",
    "core-js": "^3.17.3",
    "css-loader": "^4.3.0",
    "electron": "^22.0.2",
    "html-webpack-plugin": "^5.3.2",
    "less-loader": "^10.0.1",
    "mini-css-extract-plugin": "^2.3.0",
    "node-loader": "^2.0.0",
    "postcss": "^8.3.6",
    "postcss-loader": "^6.1.1",
    "postcss-preset-env": "^6.7.0",
    "react-refresh": "^0.10.0",
    "style-loader": "^3.2.1",
    "webpack": "^5.52.1",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0",
    "webpack-merge": "^5.8.0"
  }
}
