{
  "name": "mongodb-compass",
  "productName": "MongoDB Compass",
  "description": "The MongoDB GUI",
  "homepage": "https://compass.mongodb.com",
  "author": {
    "name": "MongoDB Inc",
    "email": "compass@mongodb.com"
  },
  "shortcutFolderName": "MongoDB",
  "license": "SSPL",
  "scripts": {
    "check": "lerna run check --stream",
    "check-evergreen": "lerna run check",
    "bootstrap": "lerna exec --stream -- npm ci --quiet",
    "bootstrap-evergreen": "cross-env ELECTRON_SKIP_BINARY_DOWNLOAD=1 lerna exec -- npm ci --quiet && npm run install-electron",
    "install-electron": "cross-env ELECTRON_SKIP_BINARY_DOWNLOAD= lerna exec --concurrency 1 -- node ../../scripts/install-electron.js",
    "start": "lerna run start --stream --scope mongodb-compass",
    "prepackages-version": "bash scripts/update-authors-and-notices.sh",
    "packages-version": "lerna version",
    "postpackages-version": "node scripts/monorepo/force-compass-dev-version.js",
    "packages-publish": "node scripts/monorepo/publish-all.js",
    "packages-test-version": "lerna version --allow-branch=* --no-git-tag-version --no-push",
    "postpackages-test-version": "node scripts/monorepo/force-compass-dev-version.js",
    "packages-test-publish": "node scripts/monorepo/publish-all.js --local --no-pristine-check --no-branch-check",
    "release": "cd packages/compass && npm run --silent release --",
    "test": "lerna run test --concurrency 1 --stream",
    "test-evergreen": "lerna run test-ci --concurrency 1",
    "update-akzidenz-cache": "node scripts/download-akzidenz.js --update-cache",
    "download-akzidenz": "lerna exec -- node ../../scripts/download-akzidenz.js",
    "update-authors": "node scripts/generate-authors.js",
    "update-third-party-notices": "node scripts/gather-licenses.js packages/compass/ > THIRD-PARTY-NOTICES.md"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/mongodb-js/compass.git"
  },
  "dependencies": {},
  "devDependencies": {
    "cross-env": "^7.0.3",
    "find-up": "^5.0.0",
    "fs-extra": "^9.1.0",
    "glob": "^7.1.6",
    "lerna": "^4.0.0",
    "make-fetch-happen": "^8.0.14",
    "ora": "^5.4.0",
    "pkg-up": "^3.1.0",
    "ps-list": "^7.2.0",
    "replace-in-file": "^6.2.0",
    "semver": "^7.3.5"
  },
  "engines": {
    "node": "^12.4.0",
    "npm": ">=6.13.0"
  },
  "bugs": {
    "url": "https://docs.mongodb.com/compass/current/#contact",
    "email": "compass@mongodb.com"
  }
}
