{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "declaration": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2018"
    ],
    "module": "commonjs",
    "outDir": "lib",
    "removeComments": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./src/**/*.spec.*"
  ]
}