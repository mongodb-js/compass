{
  "name": "@mongodb-js/compass-components",
  "version": "0.0.2",
  "description": "React Components used in Compass",
  "license": "SSPL",
  "main": "lib/index.js",
  "exports": {
    "require": "./lib/index.js",
    "import": "./lib/.esm-wrapper.mjs"
  },
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "check": "npm run lint && npm run depcheck",
    "clean": "rimraf lib",
    "precompile": "npm run clean",
    "compile": "npm run compile-ts && gen-esm-wrapper . ./lib/.esm-wrapper.mjs",
    "compile-ts": "tsc -p tsconfig.json",
    "cover": "nyc npm run test",
    "depcheck": "depcheck",
    "lint": "eslint src/**/*.tsx src/**/*.ts",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "test": "npm run lint && nyc mocha --colors -r global-jsdom/register -r ts-node/register -r test-setup.ts src/**/*.spec.tsx",
    "test-check-ci": "npm run check && npm test",
    "test-ci": "npm run test"
  },
  "dependencies": {
    "@leafygreen-ui/confirmation-modal": "^2.2.1"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "devDependencies": {
    "@testing-library/react": "^12.0.0",
    "@types/chai": "^4.2.21",
    "@types/chai-dom": "^0.0.10",
    "@types/mocha": "^9.0.0",
    "@types/react": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "chai": "^4.3.4",
    "chai-dom": "^1.9.0",
    "eslint": "^7.25.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-react": "^7.24.0",
    "global-jsdom": "^8.1.0",
    "mocha": "^8.4.0",
    "nyc": "^15.0.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mongodb-js/compass.git"
  },
  "homepage": "https://github.com/mongodb-js/compass"
}
