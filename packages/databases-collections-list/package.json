    "@mongodb-js/connection-info": "^0.16.0",
    "compass-preferences-model": "^2.45.0",
    "mongodb-collection-model": "^5.30.0",
    "mongodb-database-model": "^2.30.0",
    "mongodb-ns": "^2.4.2",
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@mongodb-js/eslint-config-compass": "^1.4.2",
    "@mongodb-js/mocha-config-compass": "^1.6.10",
    "@mongodb-js/prettier-config-compass": "^1.2.8",
    "@mongodb-js/testing-library-compass": "^1.3.5",
    "@mongodb-js/tsconfig-compass": "^1.2.9",
    "@types/chai": "^4.2.21",
    "@types/chai-dom": "^0.0.10",
    "@types/mocha": "^9.0.0",
    "@types/react": "^17.0.5",
    "@types/sinon-chai": "^3.2.5",
    "chai": "^4.3.4",
    "depcheck": "^1.4.1",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "sinon": "^9.2.3",
    "typescript": "^5.8.3"
  }
